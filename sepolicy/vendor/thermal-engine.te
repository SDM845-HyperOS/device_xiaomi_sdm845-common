# Allow vendor_thermal-engine to read vendor_thermal_data_file
allow vendor_thermal-engine vendor_thermal_data_file:dir rw_dir_perms;
allow vendor_thermal-engine vendor_thermal_data_file:file create_file_perms;

allow vendor_thermal-engine self:capability { chown fowner };
allow vendor_thermal-engine vendor_sysfs_devfreq:dir r_dir_perms;
allow vendor_thermal-engine vendor_sysfs_devfreq:file rw_file_perms;

# Allow read/write to sysfs_battery_supply
allow vendor_thermal-engine sysfs_battery_supply:dir r_dir_perms;
allow vendor_thermal-engine sysfs_battery_supply:file rw_file_perms;

# Allow read/write to sysfs_devices_system_cpu
allow vendor_thermal-engine sysfs_devices_system_cpu:dir r_dir_perms;
allow vendor_thermal-engine sysfs_devices_system_cpu:file rw_file_perms;

set_prop(vendor_thermal-engine, vendor_thermal_engine_prop)

dontaudit vendor_thermal-engine self:capability dac_override;
